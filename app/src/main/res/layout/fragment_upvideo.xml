<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#A2DEFA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/btn_fan"
            android:background="@mipmap/fan"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:text="拍照"
            android:gravity="center"
            android:textColor="#fffefe"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/btn_zhao"
            android:background="@mipmap/pai"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#787676"
        >
    </View>
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        fresco:roundedCornerRadius="10dp"
        fresco:roundAsCircle="true"
        android:id="@+id/sim"
        fresco:placeholderImage="@mipmap/ic_launcher"/>
    <ImageView
        android:background="@mipmap/lunbo"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/but_pai"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:background="@mipmap/luzhi" />
    </LinearLayout>
</LinearLayout>