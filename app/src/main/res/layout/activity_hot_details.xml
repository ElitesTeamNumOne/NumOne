<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hour.quarter_activity.view.activity.recommend.HotDetailsActivity">
    <RelativeLayout
        android:id="@+id/relat"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/list_divider">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MC跨足令"
            android:textSize="20dp"
            android:gravity="center"/>
    </RelativeLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simpbu"
        android:layout_marginTop="225dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        fresco:roundAsCircle="true"/>
    <RelativeLayout
        android:id="@+id/ssssada"
        android:layout_below="@id/relat"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/fensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18546524  粉丝  |  17关注"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/menu_item_press"/>
        <Button
            android:id="@+id/buguan"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fensi"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:text="关注"
            android:background="@drawable/buttonstyle"/>
        <RelativeLayout
            android:id="@+id/recybu"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/buttu"
                android:layout_centerHorizontal="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/zan"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/buttu"
                android:id="@+id/textdian"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="16"
                android:gravity="center"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/ssssada"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.youth.banner.Banner
                    android:id="@+id/mHotBanner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                </com.youth.banner.Banner>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mHotRecyler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
