<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hour.quarter_activity.view.activity.sideactivity.Login_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/dodgerblue"
        >
        <ImageView
            android:id="@+id/notice_fh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/fanhui"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="消息通知"
            android:textSize="16dp"
            android:textColor="@color/light_white"
            />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/notice_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabIndicatorHeight="5dp"
        app:tabMode="fixed"
        app:tabIndicatorColor="@color/right_menu_pressed"
        app:tabSelectedTextColor="@color/right_menu_pressed"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
