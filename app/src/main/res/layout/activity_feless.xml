<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A2DEFA"
    tools:context="com.example.hour.quarter_activity.view.activity.uploadactivity.FelessActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/btn_fanfan"
            android:background="@mipmap/fan"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:text="预览"
            android:gravity="center"
            android:textColor="#fffefe"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/xuan" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginStart="124dp"
            android:layout_marginTop="50dp"
            android:background="@mipmap/xuan" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="#237dde"
            android:id="@+id/feng"
            android:gravity="center"
            android:layout_alignStart="@+id/imageView"
            android:layout_below="@+id/imageView"
            android:text="设置封面" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/suo"
        android:background="@mipmap/suo"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">

    </LinearLayout>
    <Button
        android:background="#1a45e1"
        android:gravity="center"
        android:text="发布"
        android:id="@+id/btn_ffbu"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>
